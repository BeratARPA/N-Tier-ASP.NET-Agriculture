@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Hizmet Ekle</h4>
        <form method="post" class="forms-sample">
            <div class="form-group">
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" placeholder="Başlık" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Açıklama</label>
                <textarea cols="30" rows="5" asp-for="Description" class="form-control" placeholder="Açıklama"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Görsel Yolu</label>
                <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Görsel Yolu" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <button class="btn btn-outline-info">Ekle</button>
        </form>
    </div>
</div>