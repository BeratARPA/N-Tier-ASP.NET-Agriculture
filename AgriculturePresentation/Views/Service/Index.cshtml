@using EntityLayer.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="form-group">
            <a class="btn btn-outline-info" href="/Service/AddService/">Ekle</a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>#</th>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>#</th>
                    <th>#</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ServiceId</td>
                        <td><img src="@item.ImageUrl" alt="image" /></td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td><a class="btn btn-outline-success" href="/Service/UpdateService/@item.ServiceId">Güncelle</a></td>
                        <td><a class="btn btn-outline-danger" href="/Service/DeleteService/@item.ServiceId">Sil</a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>