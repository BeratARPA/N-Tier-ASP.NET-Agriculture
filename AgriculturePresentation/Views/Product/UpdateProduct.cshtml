@model EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Ürün Güncelle</h4>
        <form method="post" class="forms-sample">
            @Html.HiddenFor(x=>x.ProductId)
            <div class="form-group">
                <label>Ad</label>
                <input type="text" asp-for="name" class="form-control" placeholder="Ad" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Değer</label>
                <input type="number" asp-for="value" class="form-control" placeholder="Değer" />
                <span asp-validation-for="value" class="text-danger"></span>
            </div>
            <button class="btn btn-outline-success">Güncelle</button>
        </form>
    </div>
</div>